    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txview3"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/fpcv">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/gray"
        android:drawableLeft="@drawable/ic_account"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:text="Your Account"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        android:id="@+id/settingaccount"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:paddingStart="20dp"
        android:drawableLeft="@drawable/ic_print"
        android:gravity="center_vertical"
        android:text="Reciepts"
        android:textAllCaps="false"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/settingreciepts"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/settingaccount" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:paddingStart="20dp"
        android:drawableLeft="@drawable/ic_backup"
        android:gravity="center_vertical"
        android:text="Backup"
        android:textAllCaps="false"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/settingbackup"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/settingreciepts" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:paddingStart="20dp"
        android:drawableLeft="@drawable/ic_support"
        android:gravity="center_vertical"
        android:text="Contact Us"
        android:textAllCaps="false"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/settinghelp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/settingbackup" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:paddingStart="20dp"
        android:drawableLeft="@drawable/ic_share"
        android:gravity="center_vertical"
        android:text="Share"
        android:textAllCaps="false"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/settingshare"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/settinghelp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
